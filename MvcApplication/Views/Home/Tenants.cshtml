@{
    ViewBag.Title = "Tenants";
}

<h2>Tenants</h2>

<table id="tenants" class="table table-striped table-hover ">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Home Phone</th>
			<th>Work Phone</th>
			<th>Cell Phone</th>
			<th>Email</th>
		</tr>
	</thead>
	<tbody data-bind="foreach: items">

		<tr class="form-group">
			<td class="col-md-2"><input type="text" class="form-control input-sm" data-bind="value: firstName"></td>
			<td class="col-md-2"><input type="text" class="form-control input-sm" data-bind="value: lastName"></td>
			<td class="col-md-1"><input type="text" class="form-control input-sm" data-bind="value: homePhone"></td>
			<td class="col-md-1"><input type="text" class="form-control input-sm" data-bind="value: workPhone"></td>
			<td class="col-md-1"><input type="text" class="form-control input-sm" data-bind="value: cellPhone"></td>
			<td class="col-md-2"><input type="text" class="form-control input-sm" data-bind="value: email"></td>
		    <td class="col-md-2">
		        <a data-bind="attr: { href: '@Url.Action("Leases", "Home")/' + companyId() + '?tenantid=' + id() }" class="btn btn-info btn-sm">Leases</a>
		        @Html.Partial("_DeleteButton")
		    </td>
		</tr>
	</tbody>
</table>

@section Scripts {
    <script>
        $(function() {
            var viewModel = new propertyManager.ViewModel('@Url.RouteUrl("tenants", new {httproute = ""})', { "firstName": "New Tenant" });
            viewModel.get(function() {
                ko.applyBindings(viewModel);
            });
        });
    </script>
}